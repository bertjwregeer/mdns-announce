srcfiles = [
            'announce.cc',
            'error.cc',
            'registration_domains.cc',
            'register_records.cc',
            'record.cc',
            'dnsstring.cc',
        ]

import os

def build(ctx):
    print('â†’ build from ' + ctx.path.abspath())

    ctx(features='subst',
            source='build_version.h.in',
            target='build_version.h',
            VERSION = ctx.env['VERSION'],
            )

    ctx.program(source=srcfiles,
            target='mdns-announce',
            use=['EV', 'DNS_SD'],
            includes=['.'],
            )

